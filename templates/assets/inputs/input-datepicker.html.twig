{#
/**
 * @input
 * Theme override for a input datePicker
 *
 * Available variables:
 * - idName : ID to bind the label and the input field.
 * - name: Name to the field.
 * - value: Defualt value.
 * - label: The title of the field.
 *
 */
#}

<div class="input-field niji-time">

    <label for="{{ idName }}" class="animation-label">{{ label }}</label>

    <input type="text" name="{{ name }}" id="{{ idName }}" class="datepicker field-value">

</div>

