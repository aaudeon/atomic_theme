{#
/**
 * @input
 * Theme override for a input range
 *
 * Available variables:
 * - idName : ID to bind the label and the input field.
 * - name: Name to the field.
 * - value: Defualt value.
 * - label: The title of the field.
 *
 */
#}

<div class="range-field atomic-range">

    <label for="{{ idName }}" >{{ label }}</label>

    <input type="range" id="{{ idName }}" min="{{ minRange }}" max="{{ maxRange }}">

</div>