{#
/**
 * @input
 * Theme override for a input radio
 *
 * Available variables:
 * - idName : ID to bind the label and the input field.
 * - name: Name to the field.
 * - value: Defualt value.
 * - label: The title of the field.
 *
 */
#}

<div class="input-radio niji-radio">

    <input type="radio" id="{{ idName }}" name="{{ name }}" value="{{ value }}" />

    <label for="{{ idName }}">{{ label }}</label>

</div>